<UserControl x:Class="Training.Presentation.Views.TrainingNetworkPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:nnControl="clr-namespace:NNControl;assembly=NNControl"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <nnControl:NeuralNetworkControl ModelAdapter="{Binding ModelAdapter}">
            <nnControl:NeuralNetworkControl.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Toggle animation" Command="{Binding Service.ToggleAnimationCommand}"/>
                    <MenuItem Header="Clear colors" Command="{Binding Service.ClearColorsCommand}"/>
                </ContextMenu>
            </nnControl:NeuralNetworkControl.ContextMenu>
        </nnControl:NeuralNetworkControl>
    </Grid>
</UserControl>
