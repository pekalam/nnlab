<UserControl x:Class="Training.Presentation.Views.PanelLayout.Layouts.SingleLayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Training.Presentation.Views.PanelLayout.Layouts"
             xmlns:panelLayout="clr-namespace:Training.Presentation.Views.PanelLayout"
             xmlns:local1="clr-namespace:Training.Application.ViewModels.PanelLayout;assembly=Training.Application"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True" prism:ClearChildViewsRegionBehavior.ClearChildViews="True">
    <Grid>
        <panelLayout:PanelContainer DisplayedPanel="{Binding Selected1, Mode=TwoWay}" Region="{x:Static local1:SingleLayoutRegions.SingleLayoutMainRegion}"/>
    </Grid>
</UserControl>
